@model Posts
@{
    ViewData["Title"] = "Index";
    Layout = "~/Views/Shared/_Layout.cshtml";
}

 <main>
        <!-- Small introductory part -->
        <section id="post">
          <div class="container">
            <div class="row">
              <div class="col-lg-6 col-md-12 mb-6">
                <div class="text-block p-5">
                  <div class="content">
                    <span class="subtitle">HOME <i class="fa-solid fa-angle-right"></i></span>
                    <span class="title">  NEW JOB POST</span>
                    <h1>Post A Job</h1>
                   
                  </div>
                </div>
              </div>
            </div>
           </div>
        </section>

        <section id="job-total" class="bg-light">
          <div class="job-wrapper">
            <div class="container">
              <div class="row form-total d-flex">
                <div class="col-lg-8 col-md-12 mb-8 bg-white ">
                  <div class="container">
                      <form method="post">
                    <div class="job-info">
                     
                      <div class="row form-group job-input">
                        <div class="col-md-12 mb-3 mb-md-0">
                        <label class="font-bold" asp-for="@Model.Title">Job Title</label>
                        <input asp-for="@Model.Title"  class="form-control" placeholder="eg. Professional UI/UX Designer">
                        </div>
                      </div>
                      <div class="row form-group company-input">
                        <div class="col-md-12 mb-3 mb-md-0">
                        <label class="font-bold" asp-for="@Model.Company">Company</label>
                        <input type="text" asp-for="@Model.Company"class="form-control" placeholder="eg. Facebook, Inc">
                        </div>
                      </div>
                      <div class="row form-group job-type">
                        <div class="col-md-12 mb-3">
                          <h3 class="font-weight">Job Type</h3>
                        </div>
                        <div class="job-time-lay">
                         
                           <div class="col-md-12 mb-3">
            <select class="form-control" asp-for="@Model.TimeIds" asp-items="@(new SelectList(ViewBag.Categories,"Id","Name"))">
            </select>
        </div>
                        </div>
                      </div>
                      <div class="row form-group job-location">
                        <div class="col-md-12 mb-3 mb-md-0">
                        <h3 class="font-weight">Location</h3>
                        <input asp-for="Location" class="form-control" placeholder="Western City, UK
                        ">
                        </div>
                      </div>
                      <div class="row form-group job-desc">
                        <div class="col-md-12 mb-3 mb-md-0">
                        <h3 class="font-weight">Job Description</h3>
                        <textarea asp-for="Desc" class="form-control"  cols="30" rows="5"></textarea>
                        </div>
                      </div>
                      <div class="row form-group job-btn">
                        <div class="col-md-12 mb-3 mb-md-0">
                          <button class="btn btn-primary py-2 px-5" type="submit">Post</button>
                        </div>
                      </div>
                    </div>
                    </form>
                  </div>
                </div>
                <div class="col-lg-4 col-md-12 mb-4 employee-info">
                  <div class="p-4 mb-3 bg-white">
                    <h5 class="font-weight">Contact Info</h5>
                    <p class="bolder mb-0">Address</p>
                    <p>203 Fake St. Mountain View, San Francisco, California, USA</p>
                    <p class="bolder mb-0">Phone</p>
                    <p ><a href="#">+1 232 3235 324</a></p>
                    <p class="bolder mb-0">Email Address</p>
                    <p><a href="#">youremail@domain.com</a></p>
                    </div>

                    
                </div>
              </div>
            </div>
          </div>
        </section>
        <!-- Subscribe section of the site--> 
         @await Component.InvokeAsync("Subscribe")
      </main>  

    <!-- MAIN END -->