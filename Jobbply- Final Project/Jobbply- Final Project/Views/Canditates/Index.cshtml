@model Paginat<Worker>
@{
    ViewData["Title"] = "Index";
    Layout = "~/Views/Shared/_Layout.cshtml";
}

<!-- MAIN START -->

    <main>
       <!-- Small introductory part -->
      <section id="canditates">
        <div class="container">
          <div class="row">
            <div class="col-lg-6 col-md-12 mb-6">
              <div class="text-block p-5">
                <div class="content">
                  <span class="subtitle">@ViewBag.About.Subtitle<i class="fa-solid fa-angle-right"></i></span>
                  <span class="title"> @ViewBag.About.Title</span>
                  <h1>@ViewBag.About.Desc</h1>
                 
                </div>
              </div>
            </div>
          </div>
         </div>
      </section>
      <!-- Worker section of the site -->
      <section id="worker">
        <div class="candidates-worker bg-light">
          <div class="container">
            <div class="group-about">
              <div class="row d-flex">
                @foreach (var item in Model.Items)
               {
                   <div class="col-lg-6 col-md-12 col-mb-6">
                  <div class="team d-flex">
                    <img src="./assets/image/canditates/@item.Image" alt="">
                    <div class="text">
                      <span class="city">@item.City</span>
                      <h4>@item.Name</h4>
                      <span class="graduate">@item.Graduate</span>
                      <p>@item.Desc</p>
                      <span class="activity">@item.Activity</span>
                        <div class="col-md-12 mb-6 mb-md-0">
                          <a asp-controller="shortlist" asp-action="index" class="btn btn-primary" type="submit">@item.Button</a>
                        </div>
                    </div>
                  </div>
                </div>
               }
                
              
              </div>
           

            </div>

            <div class="pagination-lay">
              <div class="row">
                <div class="col-lg-12 col-md-6 mb-12 ">
                  <nav aria-label="Page navigation example">
                    <ul class="pagination">
                      @*<li class="page-item">
                        <a class="page-link" href="#" aria-label="Previous">
                          <span aria-hidden="true"><i class="fa-solid fa-angle-left"></i></span>
                        </a>
                      </li>*@
                     @for (var i = 1; i <= Model.PageCount; i++)
                    {
                         <li class="page-item active" >
                             <a class="page-link" 
                             style="background-color: #ff6347;border: 1px solid #ff6347; color: white;" 
                             asp-controller="canditates" asp-action="index" asp-route-pageSize="@i">@i</a></li>
                    }
                      @*<li class="page-item">
                        <a class="page-link" href="#" aria-label="Next">
                          <span aria-hidden="true"><i class="fa-solid fa-angle-right"></i></span>
                        </a>
                      </li>*@
                    </ul>
                  </nav>
                </div>
              </div>

            </div>
            
            </div>

            </div>
      </section>

      <!-- Subscribe section of the site-->
    @await Component.InvokeAsync("Subscribe")
    </main>

    <!-- MAIN END -->
