@model Paginat<BlogPage>
@{
    ViewData["Title"] = "Index";
    Layout = "~/Views/Shared/_Layout.cshtml";
}

  <!-- MAIN START -->

    <main>
       <!-- Small introductory part -->
        <section id="blog-layout">
          <div class="container">
            <div class="row">
              <div class="col-lg-6 col-md-12 mb-6">
                <div class="text-block p-5">
                  <div class="content">
                    <span class="subtitle">@ViewBag.About.Subtitle <i class="fa-solid fa-angle-right"></i></span>
                    <span class="title">@ViewBag.About.Title</span>
                    <h1>@ViewBag.About.Desc</h1>
                  
                  </div>
                </div>
              </div>
            </div>
          </div>
        </section>

        <!-- Blog Layout section of the site-->
        <section id="blog-section">
          <div class="blog-part bg-light">
            <div class="container">
              <div class="row d-flex">
               @foreach (var item in Model.Items)
              {
                   <div class="col-lg-3 col-md-12 mb-3 leftreveal">
                  <div class="blog-info">
                    <a  asp-controller="blogother" asp-action="index" class="image" style="background-image: url(./assets/image/blog/@item.Image);"> 
                    
                    </a>
                    <div class="text">
                      <div class="data d-flex">
                        <div class="date"><a href="">@item.Date</a></div>
                        <div class="admin"><a href="">@item.Admin</a></div>
                        <div class="commit"><a href="">
                          <i class="fa-solid fa-comment-dots"></i>
                          @item.Commit
                        </a></div>
                      </div>
                      <p><a href="">
                       @item.Desc
                      </a><p>
                    </div>
                  </div>
                </div>
              }
               
              </div>

              <div class="pagination-lay">
                <div class="row">
                  <div class="col-lg-12 col-md-6 mb-12 ">
                    <nav aria-label="Page navigation example">
                      <ul class="pagination">
                        @*<li class="page-item">
                          <a class="page-link" href="#" aria-label="Previous">
                            <span aria-hidden="true"><i class="fa-solid fa-angle-left"></i></span>
                          </a>
                        </li>*@
                        @for (var i = 1; i <= Model.PageCount; i++)
                       {
                           <li class="page-item active" >
                            <a class="page-link" 
                            style="background-color: #ff6347;border: 1px solid #ff6347; color: white;" 
                            asp-controller="blog" asp-action="index" asp-route-pageSize="@i">@i</a>
                        </li>
                       }
                        
                        @*<li class="page-item">
                          <a class="page-link" href="#" aria-label="Next">
                            <span aria-hidden="true"><i class="fa-solid fa-angle-right"></i></span>
                          </a>
                        </li>*@
                      </ul>
                    </nav>
                  </div>
                </div>
  
              </div>
            </div>
          </div>
        </section>

        <!-- Subscribe section of the site-->
       @await Component.InvokeAsync("Subscribe")
    </main>

  <!-- MAIN END -->

