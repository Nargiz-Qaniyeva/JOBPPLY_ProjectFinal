@model Bio
<header>
	<nav class="navbar navbar-expand-lg navbar-light ">
		<div class="container">
			<a class="navbar-brand" href="#">Jobpply</a>
			<button class="navbar-toggler" type="button" data-bs-toggle="collapse" data-bs-target="#navbarSupportedContent" aria-controls="navbarSupportedContent" aria-expanded="false" aria-label="Toggle navigation">
				<span class="navbar-toggler-icon"></span>
			</button>
			<div class="collapse navbar-collapse" id="navbarSupportedContent">
				<ul class="navbar-nav mb-2 mb-lg-0">
					<li class="nav-item">
						<a class="nav-link" aria-current="page" asp-controller="home" asp-action="index">Home</a>
					</li>
					<li class="nav-item">
						<a class="nav-link active" asp-controller="about" asp-action="index">About</a>
					</li>
					<li class="nav-item">
						<a class="nav-link" asp-controller="canditates" asp-action="index">Canditates</a>
					</li>
					<li class="nav-item">
						<a class="nav-link" asp-controller="topcategory" asp-action="index">Category</a>
					</li>
					<li class="nav-item">
						<a class="nav-link" asp-controller="blog" asp-action="index">Blog</a>
					</li>
					<li class="nav-item">
						<a class="nav-link" asp-controller="contact" asp-action="index">Contact</a>
					</li>
					<li class="nav-item">
						<a class="nav-link" asp-controller="basket" asp-action="basket">
							<i class="fa-solid fa-heart"></i>
							<sup class="rounded-circle">@ViewBag.BasketLength</sup>

						</a>
					</li>
					<li class="nav-item-post">
						<a class="nav-link " asp-controller="PostJob" asp-action="index">Post a Job</a>
					</li>
					<li class="nav-item-want">
						<a class="nav-link " asp-controller="wantjobs" asp-action="index">Want a Job</a>
					</li>
					<li class="nav-item my-auto search">
                                    <i class="fas fa-search" id="search"></i>
                                    <ul id="searchList" class="list-unstyled py-3">
                                        <li class="d-flex px-3">
                                            <input id="search-input" type="text" placeholder="Search">
                                            <i class="fas fa-search my-auto" id="search"></i>
                                        </li>

                                    </ul>
                                </li>
					@if (User.Identity.IsAuthenticated)
					{
						<li class="nav-item">
							<a class="nav-link" asp-controller="account" asp-action="LogOut">
								<i class="fa-solid fa-arrow-right-from-bracket"></i>
							</a>
						</li>
						<li class="nav-item">
						@ViewBag.Fullname
					</li>
					}
					else
					{
					<li class="nav-item">
						<a class="nav-link" 
						asp-controller="account" 
						asp-action="login">
					<i class="fa-solid fa-arrow-right-to-bracket"></i>
					</a>
					</li>
					}
					
				</ul>
			</div>
		</div>
	</nav>
</header>