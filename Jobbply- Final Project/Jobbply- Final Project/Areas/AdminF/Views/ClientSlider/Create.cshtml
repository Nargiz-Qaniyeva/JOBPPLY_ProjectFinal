@model ClientSlider
@{
    ViewData["Title"] = "Create";
    Layout = "~/Areas/AdminF/Views/Shared/_AdminLayout.cshtml";
}

<div class="container">
    <div class="row">
        <form class="forms-sample" method="post" enctype="multipart/form-data">
                    <div class="form-group" >
                      <label asp-for="Photo"></label>
                      <input asp-for="Photo" class="form-control"  placeholder="Photo" accept="image/*">
                      <span asp-validation-for="Photo" class="text-danger"></span>
                    </div>
                    <div class="form-group">
                      <label asp-for="Desc">Description</label>
                      <input asp-for="Desc" class="form-control" placeholder="Description">
                      <span asp-validation-for="Desc" class="text-danger"></span>
                    </div>
                     <div class="form-group">
                      <label asp-for="Name">Name</label>
                      <input asp-for="Name" class="form-control" placeholder="Name">
                      <span asp-validation-for="Name" class="text-danger"></span>
                    </div>
                     <div class="form-group">
                      <label asp-for="Position">Position</label>
                      <input asp-for="Position" class="form-control" placeholder="Position">
                      <span asp-validation-for="Position" class="text-danger"></span>
                    </div>
                    <button type="submit" class="btn btn-primary mr-2">Create</button>
                  </form>
    </div>
</div>

@section Scripts{
    <partial name="_Validation"/>
    }

