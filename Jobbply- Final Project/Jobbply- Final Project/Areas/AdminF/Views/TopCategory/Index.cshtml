@model Pagination<JobInfo>
@{
	ViewData["Title"] = "Index";
	Layout = "~/Areas/AdminF/Views/Shared/_AdminLayout.cshtml";
	int count = (Model.CurrentPage - 1) * 5;
}

<div class="row">
	<div class="col-lg-12 grid-margin stretch-card">
		<div class="card">
			<div class="card-body">
				<h4 class="card-title">TopCategory Table</h4>
				<a class="btn btn-success" asp-controller="TopCategory" asp-action="Create">Create</a>
				<div class="table-responsive">
					<table class="table">
						<thead>
							<tr>
								<th>№</th>
								<th>Image</th>
								<th>Title</th>
								<th>Setting</th>
							</tr>
						</thead>
						<tbody>
							@foreach (var item in Model.Items)
							{
								count++;
								<tr>
									<td>@count</td>
									<td>
										<img src="~/assets/image/category/@item.Image" />
									</td>
									<td>@item.Title</td>

									<td>
										<a class="btn btn-danger" asp-controller="topcategory" asp-action="delete" asp-route-id="@item.Id"><i class="mdi mdi-delete"></i></a>
										<a class="btn btn-primary" asp-controller="topcategory" asp-action="update" asp-route-id="@item.Id"><i class="mdi mdi-table-edit"></i></a>
										<a class="btn btn-info" asp-controller="topcategory" asp-action="detail" asp-route-id="@item.Id"><i class="mdi mdi-account-card-details"></i></a>
									</td>
								</tr>
							}

						</tbody>
					</table>
				</div>
			</div>
		</div>
	</div>
</div>


<div class="row justify-content-center">
	<ul class="pagination pagination-lg">
		@for (var i = 1; i <= Model.PageCount; i++)
		{
			<li class="page-item @(Model.CurrentPage==i? "disabled" : "") ">
				<a class="page-link" 
				asp-area="adminf" 
				asp-controller="topcategory" 
				asp-action="index" 
				asp-route-pageSize="@i">@i</a>
			</li>
		}
	</ul>
</div>